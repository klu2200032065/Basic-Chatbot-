def chatbot():
    print("ğŸ¤– Chatbot: Hello! I am a simple chatbot. Type 'bye' to exit.")
    
    while True:
        user_input = input("You: ").lower()

        if user_input in ["hi", "hello"]:
            print("ğŸ¤– Chatbot: Hi!")
        elif user_input in ["how are you", "how are you doing"]:
            print("ğŸ¤– Chatbot: I'm fine, thanks!")
        elif user_input in ["what is your name", "who are you"]:
            print("ğŸ¤– Chatbot: I am a simple chatbot created by CodeAlpha Intern.")
        elif user_input in ["bye", "exit"]:
            print("ğŸ¤– Chatbot: Goodbye! Have a great day ğŸ˜Š")
            break
        else:
            print("ğŸ¤– Chatbot: I'm sorry, I don't understand that.")

